<div class="jumbotron">
  <div class="container">
    <div class='row text-center'>
      <a href="/robots">Robodex</a>
      <h1><%= @robot.name %></h1>
    </div>
  </div>
    <div class='container'>
      <div class='col-md-6'>
        <img src="https://robohash.org/<%= @robot.avatar %>" alt='avatar' class="center-block">
      </div>
      <div class='row text-center'>
      <div class='col-md-6'>
        <p>City of Origin: <%= @robot.city %></p>
        <p>State of Origin: <%= @robot.state %></p>
        <p>Manufacture Date: <%= @robot.birthdate %></p>
        <p>Date Hired: <%= @robot.date_hired %></p>
        <p>Department: <%= @robot.department %></p>
        <form action="/robots/<%= @robot.id %>" method="post">
          <input type="hidden" name="_method" value="delete" />
          <input type="submit" value="Delete Robot" />
        </form>
      </div>
    </div>
    </div>
</div>
