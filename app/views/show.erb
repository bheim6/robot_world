<div class="jumbotron">
  <div class="container">
    <div class='row text-center'>
      <a class="btn btn-info" href="/robots">Back to Robodex</a>
      <h1><%= @robot.name %></h1>
    </div>
  </div>
    <div class='container'>
      <div class='col-md-6'>
        <img class="image-rounded" src="https://robohash.org/<%= @robot.avatar %>" alt='avatar' class="center-block">
      </div>
      <div class='row text-center'>
      <div class='col-md-6'>
        <p>City of Origin: <%= @robot.city %></p>
        <p>State of Origin: <%= @robot.state %></p>
        <p>Manufacture Date: <%= @robot.birthdate %></p>
        <p>Date Hired: <%= @robot.date_hired %></p>
        <p>Department: <%= @robot.department %></p>
        <p>
          <a class="btn btn-primary" href="/robots/<%= @robot.id %>/edit">Edit Robot</a>
        </p>

        <form action="/robots/<%= @robot.id %>" method="post">
          <input type="hidden" name="_method" value="delete" />
          <input class="btn btn-danger" type="submit" value="Delete Robot" />
        </form>
      </div>
    </div>
    </div>
</div>
